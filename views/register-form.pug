extends layout-base

block content
  div.container-fluid.max720
    div.row.my-3
      div.col-sm
        h4= title
        
    div.row
      div.col-sm
        if errors 
          for error in errors
            div.alert.alert-danger!=error.msg
            
    div.row.mx-0
      div.col-sm.bg-light.rounded.shadow-sm.p-3
        form(method='POST' action='')
  
          div.form-group
            label(for='firstName') First name
            input#firstName.form-control(type='text', placeholder='John', name='firstName', required=true, value=(undefined===attempt ? '' : attempt.firstName) )

          div.form-group
            label(for='familyName') Last name
            input#familyName.form-control(type='text', placeholder='Doe', name='familyName', required=true, value=(undefined===attempt ? '' : attempt.familyName) )
  
          div.form-group
            label(for='email') Email
            input#email.form-control(type='email', placeholder='john.doe@company.com', name='email', required=true, value=(undefined===attempt ? '' : attempt.email) )

          div.form-group
            label(for='password') Password
            input#password.form-control(type='password', placeholder='', name='password', required=true, value=(undefined===attempt ? '' : attempt.password) )

          div.form-group
            label(for='passwordConf') Password confirmation
            input#passwordConf.form-control(type='password', placeholder='', name='passwordConf', required=true, value=(undefined===attempt ? '' : attempt.passwordConf) )

          
          div.row.mt-5
            div.col-6
              button.btn.btn-primary.w-100(type='submit') Register
              
            div.col-6
              a.btn.btn-secondary.w-100(href='/login') Already an user