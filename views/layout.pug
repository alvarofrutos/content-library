extends layout-base

block nav-button
  ul.navbar-nav.ml-auto
    if !activeUser
      li.nav-item
        a.btn.btn-sm.btn-primary.text-light(href='/register') Join
    else
        li.nav-item.dropdown
          a.nav-link.dropdown-toggle(href='#', data-toggle='dropdown') #{activeUser.firstName}
          div.dropdown-menu.dropdown-menu-right
            a.dropdown-item(href=activeUser.urlEdit) Profile
            div.dropdown-divider
            a.dropdown-item(href='/logout') Log out
